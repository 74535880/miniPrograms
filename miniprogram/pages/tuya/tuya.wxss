/* pages/tuya/tuya.wxss */
page {
  height: 100%;
  width: 100%;
}
.container {
  height: 100%;
  position: relative;
}
.canvas_area {
  width: 100%;
  height: 100%;
  background: lightblue;
}
.my-canvas {
  width: 100%;
  height: 100%;
}
.canvas-tools {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 20rpx;
}

.box {
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  background: rebeccapurple;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  -ms-border-radius: 50%;
  -o-border-radius: 50%;
}
.box.box3 {
  background: #cc0033;
}
.box.box4 {
  background: #ff9900;
}

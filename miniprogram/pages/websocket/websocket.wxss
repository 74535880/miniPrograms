/* pages/websocket/websocket.wxss */

page {
  height: 100%;
  width: 100%;
}
.page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #008c8c;
  justify-content: center;
}

.content-area {
  width: 90%;
  height: 800rpx;
  background: white;
  margin: 10rpx auto;
  border-radius: 20rpx;
  -webkit-border-radius: 20rpx;
  -moz-border-radius: 20rpx;
  -ms-border-radius: 20rpx;
  -o-border-radius: 20rpx;
}
.send-message-area {
  display: flex;
}
.send-message {
  text-indent: 2em;
  background: while;
  border: 1px solid #000;
  margin: 10rpx auto 0 auto;
}
.left {
  float: left;
  width: 100%;
}

.avator {
  width: 100%;
  display: flex;
  align-items: center;
}
.avator .img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  -ms-border-radius: 50%;
  -o-border-radius: 50%;
}
.name {
  margin-left: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #9c9cc9;
}
.right {
  float: right;
}

/* pages/chatrobot/chatrobot.wxss */

.top {
  position: fixed;
  top: 0;
  height: 6vh;
  width: 100%;
  line-height: 80rpx;
  background-color: #fff;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #000;
  box-shadow: 16rpx -4rpx 30rpx rgba(0, 0, 0, 0.6);
}

.send {
  position: fixed;
  bottom: 2vh;
  width: 100%;
  height: 12vh;
  line-height: 200rpx;
  background: #ccc;
  text-align: center;
}
.input {
  position: fixed;
  bottom: 20rpx;
  
}
.text {
  float: left;
  margin-left: 20rpx;
  width: 60%;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  background: rgb(219, 211, 213);
  -webkit-border-radius: 30rpx;
  -moz-border-radius: 30rpx;
  -ms-border-radius: 30rpx;
  -o-border-radius: 30rpx;
}

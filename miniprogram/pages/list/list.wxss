/* miniprogram/pages/list/list.wxss */
page {
  width: 100%;
  height: 100%;
}
.wrapper {
  width: 100%;
  height: 100%;
}
/* nav start */
.nav-list {
  background: #ccc;
}
.nav-scroll {
  width: 100%;
  display: flex;
  height: 70rpx;
  box-sizing: border-box;
  flex-wrap: nowrap;
  align-items: center;
  white-space: nowrap;
}
.nav-item,
.active-item {
  margin-left: 20rpx;
  background: #008c8c;
  color: #fff;
  font-size: 30rpx;
  border-radius: 15rpx;
}
.nav-item .content,
.active-item .content {
  padding: 10rpx 30rpx;
}
.active-item {
  background: #f40;
  color: #fff;
}
/* nav end */

/* banner start */

.banner {
  width: 100%;
  height: 400rpx;
}
.banner .img-list {
  width: 100%;
  height: 100%;
  padding: 10rpx;
  box-sizing: border-box;
}
.img-list .img-item {
  border-radius: 30rpx;
  -webkit-border-radius: 30rpx;
  -moz-border-radius: 30rpx;
  -ms-border-radius: 30rpx;
  -o-border-radius: 30rpx;
}
.img-list .img {
  width: 100%;
  height: 100%;
}
/* banner end */

/* article start */
.img-article {
  padding: 10rpx;
  display: flex;
  height: 200rpx;
  margin-top: 30rpx;
  background: #cc9;
}
.img-wrapper {
  flex: 2 2;
  overflow: hidden;
  text-align: center;
  line-height: 200rpx;
  height: 100%;
}
.img-wrapper .img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.article-content {
  flex: 8 8;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.article-content .title {
  font-size: 34rpx;
  font-weight: border;
  color: #000;
}
.article-content .article {
  font-size: 26rpx;
  color: #7799cc;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.article-content .time {
  font-size: 26rpx;
  color: #997700;
  text-align: right;
  margin-right: 14rpx;
}

/* article end */

.getMoreNews {
  width: 100%;
  background: #77cc99;
  color: #fff;
  padding: 10rpx 20rpx;
  font-weight: bold;
  text-align: center;
  border-radius: 20rpx;
  margin-bottom: 50rpx;
  margin-top: 20rpx;
  -webkit-border-radius: 20rpx;
  -moz-border-radius: 20rpx;
  -ms-border-radius: 20rpx;
  -o-border-radius: 20rpx;
}
.get-more {
  background: #8844cc;
  font-size: 50rpx;
}
